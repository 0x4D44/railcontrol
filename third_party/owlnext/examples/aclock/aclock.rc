#include "aclock.rh"
#include <owl/winres.rh>

IDI_APP ICON "aclock.ico"

IDD_ABOUT DIALOGEX 16, 23, 168, 81
STYLE DS_SHELLFONT | DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU | DS_3DLOOK
CAPTION "About AClock"
FONT 8, "MS Shell Dlg"
{
  CTEXT "Chimes every hour.", -1, 6, 6, 156, 9
  CTEXT "Look out at midnight!", -1, 6, 18, 156, 9
  CTEXT "Created with OWLNext.", -1, 6, 42, 156, 9
  PUSHBUTTON "OK", IDOK, 60, 60, 48, 14, WS_CHILD | WS_VISIBLE | WS_TABSTOP
}

IDM_MENU MENU
{
  POPUP "&Tools"
  {
    MENUITEM "Enable hourly &chime\aF4", CM_ENABLECHIME
    MENUITEM "Enable &speech\aF5", CM_ENABLESPEECH
    MENUITEM "Stay &on top\aF6", CM_STAYONTOP
    MENUITEM "&Digital clock", CM_DIGITALCLOCK
    MENUITEM SEPARATOR
    MENUITEM "Set pizza &alarm...\aF7", CM_ALARM
    MENUITEM "&Tell time\aSpace", CM_TELLTIME
  }

#if defined(_DEBUG)

  POPUP "&Debug"
  {
    MENUITEM "Test &chime\aC", CM_CHIME
    MENUITEM "Test &midnight chime\aM", CM_MIDNIGHTCHIME
  }

#endif

  POPUP "&Help", HELP
  {
    MENUITEM "&About\aF1", CM_ABOUT
  }
}

IDM_MENU ACCELERATORS
{
  VK_F4, CM_ENABLECHIME, VIRTKEY
  VK_F5, CM_ENABLESPEECH, VIRTKEY
  VK_F6, CM_STAYONTOP, VIRTKEY
  VK_F7, CM_ALARM, VIRTKEY
  VK_SPACE, CM_TELLTIME, VIRTKEY

#if defined(_DEBUG)

  "C", CM_CHIME, VIRTKEY
  "M", CM_MIDNIGHTCHIME, VIRTKEY

#endif

  VK_F1, CM_ABOUT, VIRTKEY
}

CLOCKFACE BITMAP "clock-face.bmp"
MIDNIGHTOWL1 BITMAP "midnight-owl-1.bmp"
MIDNIGHTOWL2 BITMAP "midnight-owl-2.bmp"
MIDNIGHTOWL3 BITMAP "midnight-owl-3.bmp"
